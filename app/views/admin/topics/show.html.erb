 <div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1><%= @topic.name %></h1>
    </div>
    <div class="card-body">
      <p><strong>Description:</strong> <%= @topic.description %></p>
      <p><strong>Status:</strong> <%= @topic.active? ? 'Active' : 'Inactive' %></p>
      
      <div class="mt-3">
        <%= link_to 'Edit', edit_admin_topic_path(@topic), class: 'btn btn-warning' %>
        <%= link_to 'Back', admin_topics_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>