<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h1><%= @source.name %></h1>
    </div>
    <div class="card-body">
      <p><strong>URL:</strong> <%= @source.url %></p>
      <p><strong>Format:</strong> <%= @source.format %></p>
      <p><strong>Status:</strong> <%= @source.active? ? 'Active' : 'Inactive' %></p>
      <p><strong>Settings:</strong> <pre><%= JSON.pretty_generate(@source.settings) rescue @source.settings.to_json %></pre></p>
      
      <div class="mt-3">
        <%= link_to 'Preview', preview_admin_news_source_path(@source), class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_admin_news_source_path(@source), class: 'btn btn-warning' %>
        <%= link_to 'Back', admin_news_sources_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>