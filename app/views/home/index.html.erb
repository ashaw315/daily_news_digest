<div class="news-container">
  <div class="header-section">
    <h1 class="main-title">Daily News Digest</h1>
    <p class="subtitle">Your personalized news aggregator</p>
    
    <div class="decorative-divider"></div>
    
    <div class="auth-section">
      <% if user_signed_in? %>
        <p class="user-status">You are signed in as <span class="user-email"><%= current_user.email %></span></p>
        <div class="button-group">
          <% if current_user.admin? %>
            <%= link_to "Admin Dashboard", admin_dashboard_path, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "Edit Preferences", edit_preferences_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      <% else %>
        <p class="auth-message">Please sign in to access your personalized news</p>
        <div class="button-group">
          <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
  
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>
</div>